{
  "name": "cardwizard",
  "version": "0.1.0",
  "private": true,
  "description": "A personal finance app for optimizing credit card usage, tracking budgets, and planning reward points",
  "scripts": {
    "dev": "pnpm --filter \"@cardwizard/*\" dev",
    "build": "pnpm --filter \"@cardwizard/*\" build",
    "start": "pnpm --filter \"@cardwizard/api\" start",
    "lint": "pnpm --filter \"@cardwizard/*\" lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0",
  "devDependencies": {
    "prettier": "^3.0.0"
  },
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
